{
  "compilerOptions": {
    "noImplicitAny": true,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
 
    "lib": ["es2017", "dom"],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "./src/**/*.ts",
    "./test/**/*.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "bundles"
  ],
  
  "angularCompilerOptions": {
    "strictMetadataEmit": false,
    "skipTemplateCodegen": true
  }
}